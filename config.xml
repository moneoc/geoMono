        version     = "1.0.0" >

    <!-- versionCode is optional and Android only -->

    <name>geoApp</name>

    <description>
        Práctica de Geolocalización 
    </description>

    <author href="http://www.laitaliana.com.mx" email="moneoc@gmail.com">
        Mr. Octavio Monroy
    </author>

